<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_skills_interests_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Skills &amp; Interests" />

        <include
            layout="@layout/item_divider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_interest_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:text="Interests"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_interests_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Artificial Intelligence, Genetic Algorithms, Big"/>

        <include
            layout="@layout/item_divider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_skills_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:text="Skills"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_skills_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Java Programming, UML, Silent Assassination"/>


    </LinearLayout>
</android.support.v7.widget.CardView>